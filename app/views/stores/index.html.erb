<div class="w-full max-w-6xl mx-auto">
  <!-- Notice Message -->
  <% if notice.present? %>
    <div class="p-4 mb-6 bg-green-50 text-green-800 rounded-lg shadow-sm" role="alert">
      <span class="font-medium"><%= notice %></span>
    </div>
  <% end %>

  <!-- Page Title -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Your Pragmatic Catalog</h1>
    <p class="text-gray-600 text-sm">Explore our collection of high-quality products.</p>
  </div>

  <!-- Product Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105 transform">
            <div class="relative">
              <%= image_tag(product.image_url, 
                  class: "w-full h-48 object-cover") %>
            </div>
            <div class="p-4">
              <h2 class="text-xl font-semibold text-gray-900 mb-2">
                <%= product.title %>
              </h2>
              <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                <%= sanitize(product.description) %>
              </p>
              <div class="flex items-center justify-between">
                <span class="text-lg font-bold text-indigo-600">
                  <%= number_to_currency(product.price) %>
                </span>
                <%= button_to "Add to Cart", cart_items_path(product_id: product), 
                    form_class: "inline", 
                    class: "px-4 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>