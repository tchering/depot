<div id="<%= dom_id product %>" class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <%= image_tag product.image_url, alt: product.title, class: "w-full h-48 object-cover" if product.image_url.present? %>
  <div class="p-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">
      <%= product.title %>
    </h3>
    <div class="text-gray-600 mb-4 line-clamp-3">
      <%= sanitize(product.description) %>
    </div>
    <div class="flex items-center justify-between mt-4">
      <span class="text-2xl font-bold text-blue-600">
        <%= number_to_currency(product.price) %>
      </span>
      <div class="flex gap-2">
        <%= link_to "View", product, class: "bg-blue-100 text-blue-600 hover:bg-blue-200 px-4 py-2 rounded-md font-medium transition-colors duration-200" %>
        <%= link_to "Edit", edit_product_path(product), class: "bg-gray-100 text-gray-600 hover:bg-gray-200 px-4 py-2 rounded-md font-medium transition-colors duration-200" %>
      </div>
    </div>
  </div>
</div>